<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Express To-Do</title>
    <script src="/javascripts/main.js"></script>
  </head>
  <body>
    <a href="/">Home</a>
    <h1>Todos as of <%= time %></h1>
    <ul>
      <% todos.forEach(function(t) { %>
      <li>
        <a href="/todos/<%= t.id %>"><%= t.todo %></a>
        - <%= t.done ? 'done' : 'not done' %>
        <form action="/todos/<%= t.id %>?_method=DELETE" class="delete-form" method="POST">
          <button type="submit">X</button>
        </form>
      </li>
      <% }); %>
    </ul>
    <a href="/todos/new">Create a ToDo</a>

    <!-- <form action="/todos" method="POST" autocomplete="off">
      <input type="text" name="todo" />
      <button type="submit">Save Todo</button>
    </form> -->
  </body>
</html>
